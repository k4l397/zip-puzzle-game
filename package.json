{
  "name": "zip-puzzle-game",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern web-based Zip puzzle game with React + TypeScript + Canvas API",
  "repository": {
    "type": "git",
    "url": "https://github.com/k4l397/zip-puzzle-game.git"
  },
  "homepage": "https://github.com/k4l397/zip-puzzle-game",
  "bugs": {
    "url": "https://github.com/k4l397/zip-puzzle-game/issues"
  },
  "author": "Kyle Welch",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "puzzle",
    "game",
    "react",
    "typescript",
    "canvas",
    "zip-puzzle",
    "web-game"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "benchmark": "vitest bench src/benchmarks",
    "benchmark:watch": "vitest bench src/benchmarks --watch"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
